<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FF0000"
    android:paddingTop="?attr/actionBarSize"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="75dp"
        android:minWidth="280dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_profile_placeholder"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircleImage"
                android:contentDescription="Profil"
                android:backgroundTint="@android:color/transparent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@exemplu.com"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nicknameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nickname_placeholder"
                    android:textSize="14sp"
                    android:textColor="#DDDDDD"
                    android:paddingTop="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onNicknameClick"/>

            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="#44000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchAlarmsEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ActiveazÄƒ alarmele"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchRain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="ðŸŒ§ AlertÄƒ ploaie"
                    android:textColor="#EEEEEE" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchTemp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="ðŸŒ¡ AlertÄƒ temperaturÄƒ"
                    android:textColor="#EEEEEE" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchHumidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="ðŸ’§ AlertÄƒ umiditate"
                    android:textColor="#EEEEEE" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchPollution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="â˜¢ï¸ AlertÄƒ poluare"
                    android:textColor="#EEEEEE" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchUv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="ðŸ”† AlertÄƒ UV"
                    android:textColor="#EEEEEE" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</FrameLayout>
